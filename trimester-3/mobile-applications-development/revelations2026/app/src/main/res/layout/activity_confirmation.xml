<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Konfetti View for celebration effect -->
    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfetti_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp" />

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:navigationIcon="@drawable/ic_back_arrow"
            app:title="@string/confirmation_title"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Summary View -->
            <LinearLayout
                android:id="@+id/summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header -->
                <LinearLayout
                    android:id="@+id/header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/badge_step"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="6dp"
                        android:text="@string/step_3_of_3"
                        android:textColor="@color/primary"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/review_confirm"
                        android:textColor="@color/text_primary"
                        android:textSize="22sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/confirmation_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Summary Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Personal Info Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/primary_light"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person"
                                android:contentDescription="@string/person_icon"
                                app:tint="@color/primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/personal_information"
                                android:textColor="@color/primary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Personal Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Name -->
                            <TextView
                                android:id="@+id/tv_label_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_regular" />

                            <TextView
                                android:id="@+id/tv_summary_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                tools:text="John Doe" />

                            <!-- Mobile -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mobile_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_regular" />

                            <TextView
                                android:id="@+id/tv_summary_mobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                tools:text="+91 9876543210" />

                            <!-- Email -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/email_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_regular" />

                            <TextView
                                android:id="@+id/tv_summary_email"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                tools:text="john@email.com" />

                            <!-- College -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/college_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/poppins_regular" />

                            <TextView
                                android:id="@+id/tv_summary_college"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"
                                tools:text="ABC Engineering College" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@color/divider" />

                        <!-- Event Info Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/secondary_light"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_event"
                                android:contentDescription="@string/event_icon"
                                app:tint="@color/secondary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="@string/event_details"
                                android:textColor="@color/secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Event Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/group_label"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular" />

                                <TextView
                                    android:id="@+id/tv_summary_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/text_primary"
                                    android:textSize="16sp"
                                    tools:text="Technical Events" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/events_label"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="@font/poppins_regular" />

                                <TextView
                                    android:id="@+id/tv_summary_events"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/poppins_bold"
                                    android:textColor="@color/secondary"
                                    android:textSize="18sp"
                                    tools:text="3 Events" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Buttons -->
                <LinearLayout
                    android:id="@+id/button_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/edit"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_edit"
                        app:iconGravity="start"
                        app:strokeColor="@color/text_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_confirm"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="2"
                        android:backgroundTint="@color/success"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/confirm_registration"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_check"
                        app:iconGravity="start" />

                </LinearLayout>

            </LinearLayout>

            <!-- ============================================== -->
            <!-- SUCCESS VIEW WITH MOCHI IMAGE (Initially Hidden) -->
            <!-- ============================================== -->
            <LinearLayout
                android:id="@+id/success_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="32dp"
                android:visibility="gone">

                <!-- ============================== -->
                <!-- ðŸŽ‰ MOCHI IMAGE - YOUR IMAGE! -->
                <!-- ============================== -->
                <ImageView
                    android:id="@+id/iv_mochi"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Mochi Mascot"
                    android:src="@drawable/mochi" />

                <!-- Success Check Icon (smaller now, below mochi) -->
                <ImageView
                    android:id="@+id/iv_success_check"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_success_check"
                    android:contentDescription="@string/success_icon" />

                <!-- Success Title -->
                <TextView
                    android:id="@+id/tv_success_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="@string/registration_complete"
                    android:textColor="@color/success"
                    android:textSize="24sp" />

                <!-- Success Message -->
                <TextView
                    android:id="@+id/tv_success_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingHorizontal="24dp"
                    android:text="@string/thank_you_message"
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp" />

                <!-- Registration Details Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardBackgroundColor="@color/success_light"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/success"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Registration ID -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/registration_id"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_registration_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/success"
                                android:textSize="18sp"
                                android:textIsSelectable="true"
                                tools:text="REV2026-JOH-12345" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="16dp"
                            android:background="@color/success_divider" />

                        <!-- Registration Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:text="@string/registration_date"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tv_registration_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                tools:text="15 Mar 2026, 10:30 AM" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_share"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/share_details"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_share"
                        app:iconGravity="start"
                        app:strokeColor="@color/primary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_new_registration"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/new_registration"
                        android:textAllCaps="false"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_add"
                        app:iconGravity="start" />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>